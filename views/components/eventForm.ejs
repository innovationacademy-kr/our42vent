<button class="create-event-btn"><i class="create-event-icon material-icons">add</i></button>
<section class="layout-form none">
  <form class="form" action="/post/event" method="post">
    <div class="form-content">
      <div class="form-title">
        <label class="block text-bold" for="event-title">제목</label>
        <input
          class="title-style"
          id="event-title"
          maxlength="2"
          name="titleName"
          required
          type="text"
        />
      </div>
      <div class="form-pic">
        <label class="block text-bold" for="event-pic">발표자 / 담당자</label>
        <input class="pic-style" id="event-pic" name="picName" type="text" />
      </div>
      <div class="form-beginat">
        <label class="block text-bold" for="event-beginat">시작 시간</label>
        <input
          class="beginat-style"
          id="event-beginat"
          name="beginatName"
          required
          type="datetime-local"
        />
      </div>
      <div class="form-endat">
        <label class="block text-bold" for="event-endat">종료 시간</label>
        <input
          class="endat-style"
          id="event-endat"
          name="endatName"
          required
          type="datetime-local"
        />
      </div>
      <div class="form-location">
        <label class="block text-bold" for="event-location">장소</label>
        <input
          class="location-style"
          id="event-location"
          name="locationName"
          required
          type="text"
        />
      </div>
      <div class="form-category">
        <label class="block text-bold" for="event-category">카테고리</label>
        <select class="category-style" id="event-category" name="categoryName" required>
          <option value="lecture">멘토특강</option>
          <option value="exam">시험</option>
          <option value="contest">해커톤/공모전</option>
          <option value="conference">세미나/컨퍼런스</option>
          <option value="community">커뮤니티</option>
        </select>
      </div>
      <div class="form-topic">
        <label class="block text-bold" for="event-topic">주제</label>
        <textarea
          class="topic-style"
          id="event-topic"
          name="topicName"
          required
          type="text"
        ></textarea>
      </div>
      <div class="form-details">
        <label class="block text-bold" for="event-details">상세설명</label>
        <textarea
          class="details-style"
          id="event-details"
          name="detailsName"
          type="text"
        ></textarea>
      </div>
    </div>
    <div class="form-button">
      <button type="submit">이벤트 생성</button>
      <button type="submit" formaction="/event_text">홍보글 미리보기</button>
    </div>
  </form>
</section>
