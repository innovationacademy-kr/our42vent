<section class="layout-form">
  <form class="form" action="/post/event" method="post">
    <div class="form-content">
      <div class="form-title">
        <label class="block" for="event-title">제목</label>
        <input class="title-style" id="event-title" type="text" name="titleName" />
      </div>
      <div class="form-pic">
        <label class="block" for="event-pic">발표자 / 담당자</label>
        <input class="pic-style" id="event-pic" type="text" name="picName" />
      </div>
      <div class="form-beginat">
        <label class="block" for="event-beginat">시작 시간</label>
        <input class="beginat-style" id="event-beginat" type="datetime-local" name="beginatName" />
      </div>
      <div class="form-endat">
        <label class="block" for="event-endat">종료 시간</label>
        <input class="endat-style" id="event-endat" type="datetime-local" name="endatName" />
      </div>
      <div class="form-location">
        <label class="block" for="event-location">장소</label>
        <input class="location-style" id="event-location" type="text" name="locationName" />
      </div>
      <div class="form-category">
        <label class="block" for="event-category">카테고리</label>
        <select
          class="category-style"
          id="event-category"
          autocomplete="off"
          required
          name="categoryName"
        >
          <option value="lecture">멘토특강</option>
          <option value="exam">시험</option>
          <option value="contest">해커톤/공모전</option>
          <option value="conference">세미나/컨퍼런스</option>
          <option value="community">커뮤니티</option>
        </select>
      </div>
      <div class="form-topic">
        <label class="block" for="event-topic">주제</label>
        <input class="topic-style" id="event-topic" type="text" name="topicName" />
      </div>
      <div class="form-details">
        <label class="block" for="event-details">상세설명</label>
        <input class="details-style" id="event-details" type="text" name="detailsName" />
      </div>
    </div>
    <div class="form-button">
      <button type="submit">이벤트 생성</button>
      <button type="submit" formaction="/event_text">홍보글 미리보기</button>
    </div>
  </form>
</section>
